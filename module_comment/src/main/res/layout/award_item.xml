<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_award_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="获奖"
        android:textColor="@color/blue"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/tv_award_sequenceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="第25届(2016) - MTV电影奖-最佳动作演员"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_movie_img"
            android:layout_width="70dp"
            android:layout_height="@dimen/dp_100" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_award_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="获奖影片：《侏罗纪世界》"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_play_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="饰演角色：Owen"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_part"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/part" />

</LinearLayout>